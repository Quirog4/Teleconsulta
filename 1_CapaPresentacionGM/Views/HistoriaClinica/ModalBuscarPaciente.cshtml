
<div class="modal" id="ModalBusqueda" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="myModalLabel">Seleccione su paciente</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <form id="form-paciente" action="@Url.Action("BuscarPaciente","HistoriaClinica")">
        <div class="modal-body">
          <div class="row">
            <div class="col-md-3 col-4 text-right"><label>H.C.U. :</label></div>
            <div class="col-md-9  col-8">
              <input id="hcu" type="text" name="nroHistoria" class="form-general" maxlength="10" placeholder="000000" />
            </div>
          </div>
          <div class="row  justify-content-end">
            <div class="col-md-3 text-right  col-4">
              <label>Apellidos:</label>
            </div>
            <div class="col-md-5  col-8" style="padding-right:3px">
              <input id="apellido1" type="text" name="apellido1" class="form-general" required="required" minlength="2" placeholder="Paterno" " />
            </div>
            <div class="col-md-4  col-8 col-offset-4" style="padding-left:3px">
              <input id="apellido2" type="text" name="apellido2" class="form-general" required="required" placeholder="Materno" />
            </div>
          </div>
          <div class="row">
            <div class="col-md-3  text-right col-4">
              <label>Nombres:</label>
            </div>
            <div class="col-md-9 col-8">
              <input type="text" name="nombres" class="form-general" placeholder="Nombres" />
            </div>
          </div>
        </div>
        <div class="row-spinner">
          <div class="spinner"></div>
        </div>
        <div id="resultados-busqueda" style="font-size:13px;" class="row col-12">
          <table class="header-fijo table-result table-hover">
            <thead>
              <tr>
                <th width="120" class="text-center">HCU</th>
                <th>nombres y apellidos</th>
              </tr>
            </thead>
            <tbody style="max-height:200px"></tbody>
          </table>
        </div>
        <span id="error" style="color:#dd4b39;padding-left:40px;font-style:italic">El apellido paterno del paciente o el n&uacute;mero de HC son campos obligatorios</span>
        <div id="not-found" class="text-center" style="padding-left:15px">No se encontraron resultados</div>
        <div class="modal-footer">
          <div class="row">
            <div class="col-md-6 col-6">
              <button type="button" class="btn bg-dark btn-sm" data-dismiss="modal">
              <i class="fas fa-times"></i>
              Cerrar</button>
            </div>
            <div class="col-md-6 text-right col-6">
              <button id="btn-buscar" type="button" class="btn bg-info btn-sm">
              <i class="fas fa-search"></i>
              Buscar</button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
