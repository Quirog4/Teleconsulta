@model _1_CapaPresentacionGM.Models.TeleconsultaViewModel
@{
    var paciente = Model.atencionTM.paciente;
    var atenciones = Model.atenciones;
}
<div class="modal" id="ModalHistoria" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document" style="max-width:1000px">
    <div class="modal-content" style="min-height:200px">
      <div class="modal-header">
        <h4 class="modal-title" id="myModalLabel">Atenciones anteriores</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body">
        <div class=row>
          <div class="col-md-6 col-12"><label>Paciente:</label> 
          <span class="paciente" style="text-transform:capitalize;">@paciente.ApellidoPaterno @paciente.ApellidoMaterno @paciente.Nombre</span>   </div>
          <div class="col-md-2 col-6"><label>Sexo: </label>  <span class="sexoo">@paciente.Sexo</span>  </div>
          <div class="col-md-2 col-6"><label>H.C.: </label>  <span class="hcu">@paciente.NroHistoria</span>  </div>
          <div class="col-md-2 col-6"><label>DNI/OTRO: </label> <span class="dni">@paciente.DNI</span>  </div>
          </div>
          <div class="loader" ></div>
        <div class="table-responsive col-md-12 col-12">
          <table data-page-length="5"  class="table-bordered" id="tabla-atenciones">
            <thead class="bg-secondary">
              <tr>
                <th width="90">Fecha</th>
                <th width="100">N&deg; Admisi&oacute;n</th>
                <th width="150">Tipo Atenci&oacute;n</th>
                <th width="250">Diagn&oacute;stico</th>
                <th width="150">M&eacute;dico</th>
                <th width="100">Especialidad</th>
                <th></th>
              </tr>
            </thead>
            <tbody  $("#tabla-atenciones")>
          @if (atenciones!=null) {
            foreach (var a in atenciones)
            {
              <tr>
                <td width="90">@a.FechaAT</td>
                <td width="100">@a.CodAdmision</td>
                <td width="150">@a.TipoAt</td>
                <td width="250">@a.Diagnosticos</td>
                <td width="150">@a.Medico</td>
                <td width="100">@a.Especialidad</td>
                <td>@a.colorTA</td>
              </tr>
            } }
            </tbody>
          </table>
        </div>
      </div>
      <div class="modal-footer">
        <div class="row">
          <div class="col-md-6 col-xs-6">
            <button type="button" class="btn bg-dark btn-sm" data-dismiss="modal">Cerrar</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


